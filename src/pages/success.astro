---
import { SITE } from '~/config.mjs';
import { getCanonical, getHomePermalink } from '~/utils/permalinks';
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero-2.astro';
import Form from '~/components/widgets/TheForm.astro';
import Note from '~/components/widgets/Note-2.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps-2.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction-2.astro';
import SuccessMessage from '~/components/widgets/SuccessMessage.astro';


const meta = {
	title: SITE.title,
	description: SITE.description,
	canonical: getCanonical(getHomePermalink()),
};
---

<Layout {meta}>
	<SuccessMessage />
	<Note />
	<Features />
	<Steps />
	<FAQs />
	<CallToAction />
</Layout>
